<UserControl x:Class="ChaseLabs.Echo.Video_Converter.Themes.FloatingButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChaseLabs.Echo.Video_Converter.Themes"
             mc:Ignorable="d" 
             >
    <Grid>
        <Button Name="CloseBtn" Width="75" Height="75" Background="Transparent" BorderThickness="0">
            <Border BorderBrush="Transparent" Background="#1E0E33" BorderThickness="1" CornerRadius="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="50" Width="50">
                <Border.Effect>
                    <DropShadowEffect Direction="-90" BlurRadius="9" ShadowDepth="5" Opacity="1" />
                </Border.Effect>
            </Border>
        </Button>
    </Grid>
</UserControl>
