<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        WindowStyle="None"
        Foreground="White"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        Background="#363636"
        Title="Launcher" Height="525" Width="350">
    <Grid >
        <Label x:Name="title_lbl" Foreground="White" Content="Echo Video Converter" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30"/>
        <Label x:Name="status_lbl" Foreground="White" Content="Checking For Updates..." FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,65"/>
        <Image x:Name="image" HorizontalAlignment="Center" Height="305" VerticalAlignment="Center" Width="340" gif:ImageBehavior.AnimatedSource="Loading.gif" Stretch="UniformToFill" Margin="5,88,5,132"/>
    </Grid>
</Window>
